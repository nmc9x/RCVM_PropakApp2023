<UserControl
    x:Class="App.PVCFC_RFID.Design.XAMLViews.ucJobItems"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:App.PVCFC_RFID.Design.XAMLViews"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:Background="White"
    d:DesignHeight="250"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Light.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.DeepPurple.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Accent/MaterialDesignColor.Lime.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Border
            Margin="10"
            BorderBrush="blue"
            BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid Background="#d8edde">
                    <!--<Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>-->
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid Background="#d8edde">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="3*" />
                        </Grid.RowDefinitions>
                        <Label
                            HorizontalAlignment="Center"
                            Content="Printer"
                            FontSize="15"
                            FontWeight="Bold" />
                        <StackPanel Grid.Row="1">
                            <Grid Margin="0,0,0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="7*" />

                                </Grid.ColumnDefinitions>
                                <Label Content="IP: " />
                                <TextBox
                                    Grid.Column="1"
                                    Margin="0,0,20,0"
                                    VerticalAlignment="Center"
                                    materialDesign:HintAssist.Hint="Printer IP Address"
                                    Background="WhiteSmoke"
                                    BorderBrush="DimGray"
                                    Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="7*" />

                                </Grid.ColumnDefinitions>
                                <Label Content="PORT: " />
                                <TextBox
                                    Grid.Column="1"
                                    Margin="0,0,20,0"
                                    VerticalAlignment="Center"
                                    materialDesign:HintAssist.Hint="Printer Port"
                                    Background="WhiteSmoke"
                                    BorderBrush="DimGray"
                                    Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                            </Grid>
                            <!--<StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                                <Label Content="IP: " />
                                <TextBox
                                    VerticalAlignment="Center"
                                    materialDesign:HintAssist.Hint="IP Address"
                                    Background="Wheat"
                                    BorderBrush="DimGray"
                                    Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                            </StackPanel>-->
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="3*" />
                        </Grid.RowDefinitions>
                        <Label
                            HorizontalAlignment="Center"
                            Content="Camera"
                            FontSize="15"
                            FontWeight="Bold" />
                        <StackPanel Grid.Row="1">
                            <Grid Margin="0,0,0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="7*" />

                                </Grid.ColumnDefinitions>
                                <Label Content="IP: " />
                                <TextBox
                                    Grid.Column="1"
                                    Margin="0,0,20,0"
                                    VerticalAlignment="Center"
                                    materialDesign:HintAssist.Hint="Printer IP Address"
                                    Background="WhiteSmoke"
                                    BorderBrush="DimGray"
                                    Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="7*" />

                                </Grid.ColumnDefinitions>
                                <Label Content="PORT: " />
                                <TextBox
                                    Grid.Column="1"
                                    Margin="0,0,20,0"
                                    VerticalAlignment="Center"
                                    materialDesign:HintAssist.Hint="Printer Port"
                                    Background="WhiteSmoke"
                                    BorderBrush="DimGray"
                                    Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                            </Grid>
                            <!--<StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                                <Label Content="IP: " />
                                <TextBox
                                    VerticalAlignment="Center"
                                    materialDesign:HintAssist.Hint="IP Address"
                                    Background="Wheat"
                                    BorderBrush="DimGray"
                                    Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                            </StackPanel>-->
                        </StackPanel>
                    </Grid>



                </Grid>

                <Grid Grid.Column="1" Background="Transparent">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Row="0" Background="#d8edde" />
                    <Grid Grid.Row="1" Background="#d8edde" />
                    <Grid
                        Grid.Row="1"
                        Grid.Column="1"
                        Background="#d8edde" />
                    <Grid
                        Grid.Row="0"
                        Grid.Column="1"
                        Background="#d8edde" />
                    <Button
                        IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                        Style="{StaticResource MaterialDesignFloatingActionLightButton}"
                        ToolTip="MaterialDesignFloatingActionLightButton">
                        <materialDesign:PackIcon
                            Width="50"
                            Height="50"
                            Kind="CogOutline" />
                    </Button>

                    <Button
                        Grid.Row="1"
                        IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                        Style="{StaticResource MaterialDesignFloatingActionLightButton}"
                        ToolTip="MaterialDesignFloatingActionLightButton">
                        <materialDesign:PackIcon
                            Width="50"
                            Height="50"
                            Kind="CogOutline" />
                    </Button>

                    <Button
                        Grid.Column="1"
                        IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                        Style="{StaticResource MaterialDesignFloatingActionLightButton}"
                        ToolTip="MaterialDesignFloatingActionLightButton">
                        <materialDesign:PackIcon
                            Width="50"
                            Height="50"
                            Foreground="CadetBlue"
                            Kind="Web" />
                    </Button>


                </Grid>
            </Grid>

        </Border>
    </Grid>
</UserControl>
